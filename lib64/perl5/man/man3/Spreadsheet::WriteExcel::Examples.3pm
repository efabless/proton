\&    
\&    $worksheet\->write($row, 0, $txt);
\&    $worksheet\->data_validation($row, 1,
\&        {
\&            validate        => \*(Aqinteger\*(Aq,
\&            criteria        => \*(Aqnot between\*(Aq,
\&            minimum         => \*(Aq=E3\*(Aq,
\&            maximum         => \*(Aq=F3\*(Aq,
\&        });
\&    
\&    
